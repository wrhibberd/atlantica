---
interface Props {
	title: string;
	description: string;
	bodyStyle?: string;
}

import { ViewTransitions } from "astro:transitions";
import "../styles/app.pcss";

const siteName = "Atlantica";

const {
	title,
	description,
	bodyStyle = "min-h-screen h-full w-full bg-black text-white flex flex-col",
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<!-- TODO remove on prod -->
		<meta name="robots" content="noindex,nofollow" />
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta property="og:locale" content="en_GB" />
		<meta property="og:title" content={title} />
		<meta property="og:site_name" content={siteName} />
		<meta property="og:url" content={Astro.url.href} />
		<meta property="og:description" content={description} />
		<!-- 
		<meta property="og:image" content="/seo/twitter-ganni.jpg" />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:width" content="630" />
		<meta name="twitter:card" content="summary_large_image" /> 
		-->
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<!-- 
			<meta name="twitter:image:src" content="/seo/twitter-ganni.jpg" /> 
			<meta name="twitter:image:width" content="1200" />
			<meta name="twitter:image:height" content="600" />
		-->
		<link rel="sitemap" href="/sitemap-index.xml" />
		<ViewTransitions fallback="none" />
	</head>
	<body class={bodyStyle}>
		<slot />
	</body>
</html>
